{{> welcomemenu }}
<section class="ui raised segment">
    <div class="ui grid">
        <h1 class="ui header">
          <img src="images/tweetLogo.png" class="ui image">
          Administrator page
        </h1>
    </div>
</section>


<div class="ui grid">
    <div class="two column row">

        <div class="column">
            <h2 class="ui dividing header">Register new User</h2>
            <section class="ui raised segment">
                <div class="ui grid">
                    <div class="ui ten wide column">
                        <div class="ui stacked fluid form segment">
                            <form action="/register" method="POST">
                                <h3 class="ui header">Register</h3>
                                <div class="two fields">
                                    <div class="field">
                                        <label>First Name</label>
                                        <input placeholder="First Name" type="text" name="firstName">
                                    </div>
                                    <div class="field">
                                        <label>Last Name</label>
                                        <input placeholder="Last Name" type="text" name="lastName">
                                    </div>
                                </div>
                                <div class="field">
                                    <label>Email</label>
                                    <input placeholder="Email" type="text" name="email">
                                </div>
                                <div class="field">
                                    <label>Password</label>
                                    <input type="password" name="password">
                                </div>
                                <button class="ui blue submit button">Submit</button>
                            </form>
                            {{> formerror }}
                        </div>
                    </div>
                </div>
        </div>

        <section class="column">
            <h2 class="ui dividing header">Delete User</h2>
            <section class="ui rasied form segment user">
                <div class="two fields">
                    <div class="field">
                        <div class="column">
                            <form action="/deleteUser" method="POST">
                                <div class="ui selection dropdown" id="deleteUser">
                                    <input name="deleteUser" type="hidden">
                                    <div class="default text">Select User</div>
                                    <i class="dropdown icon"></i>
                                    <div class="menu user">
                                        {{#each user}}
                                            <div class="item userlist" data-value="{{email}}">{{email}}</div>
                                        {{/each}}
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                <button class="ui blue submit button">Delete User <i class="trash icon"></i></button>
                </form>
        </section>

    </div>
</div>

<div class="ui grid">

    <div class="four wide column">
        <h2 class="ui dividing header">Search for User Tweets to Delete</h2>
            {{> findusersearch}}
    </div>

    <div class="twelve wide column">
        {{> mytweetlist}}
    </div>

</div>

